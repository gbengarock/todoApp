<%- include('header'); -%>

  
  <div class="container text-center p-3">
    <h1>To-Do App!</h1>
    <h2> <%= kindOfList %> </h2>
    <h3>Add New To-Do</h3>
    <form class="mb-3 row" action="/" method="post">
      <input class="form-control" type="text" name="newItem" placeholder='Enter new task' autocomplete="off"><br>
      <button class="btn btn-info btn-lg mb-3" type="submit" name="list" value="<%= kindOfList %>">Add</button>
    </form><br>
  </div>

    <div class="container text-start">
      <%  newListItems.forEach(function(newListItem){ %>
        <form class="mb-3 row" action="/delete" method="post">
          <div class="form-check itemDisplay">
            <input class="form-check-input" name="checkedList" value="<%= newListItem._id %>" type="checkbox" onChange="this.form.submit()"/>
            <p class="form-check-label"> <%= newListItem.name %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= kindOfList %>"></input>
        </form>
      <%  }) %>
    </div>
  


  <%- include('footer'); -%>